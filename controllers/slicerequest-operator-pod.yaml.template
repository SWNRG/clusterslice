---
apiVersion: v1
kind: Pod
metadata:
  name: slicerequest-operator
  namespace: swn
spec:
  containers:
  - name: slicerequest-operator
    image: swnrg/slicerequest-operator:latest
    imagePullPolicy: Always
    env:
    - name: LOG_TYPE
      value: "text"
      # could also be json
  serviceAccountName: monitor-clusterslice
  imagePullSecrets:
  - name: registry-secret
